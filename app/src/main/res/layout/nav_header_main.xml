<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@drawable/side_nav_bar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="vertical"
        android:gravity="bottom">


    <TextView android:id="@+id/nav_main_user_name"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="0.8"
              android:drawableLeft="@drawable/ic_account_circle"
              android:drawablePadding="-150dp"
              android:drawableStart="@drawable/ic_account_circle"
              android:background="@drawable/color_gradient_green"
              android:text="@string/user"
              android:textSize="20sp"
              android:textStyle="bold"
              android:gravity="center"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:background="@drawable/color_gradient_green"
            android:backgroundTint="@android:color/darker_gray"
            android:backgroundTintMode="multiply"
            android:layout_weight="0.2">

        <ImageButton
                android:id="@+id/account_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_account_edit"
                android:layout_weight="0.5"
        />

        <ImageButton
                android:id="@+id/sign_out_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_sign_out"
                android:layout_weight="0.5"
        />

    </LinearLayout>


</LinearLayout>
